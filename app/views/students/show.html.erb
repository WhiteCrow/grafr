<!DOCTYPE html>
<!-- saved from url=(0069)http://3.bytetone.cn:8765/index.php?c=Transcript&a=index&stu_id=10292 -->
<html><head><meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <link rel="stylesheet" type="text/css" href="/style/bootstrap.min.css">
    <style>
        .table_wrap{width:1200px;margin: 10px auto}
        .jx_table{border-collapse:collapse;border-spacing:0;margin-bottom: 20px}
        .jx_table th,.jx_table td{text-align: center;border:1px solid #e7eaec;padding:4px;min-height: 40px;}
        .jx_table th{background-color: #f5f5f5;}
        .jx_table td{background-color: #fff;}
        .row{margin-bottom: 20px;}
    </style>
</head>
<body>
<div class="table_wrap">
	<table width="100%" class="jx_table">
        <tbody>
          <tr class="firstRow">
            <th valign="top" colspan="5"><%= image_tag "logo.png", width: "359", height: "78"%></th>
          </tr>
          <tr class="firstRow">
            <th valign="top" rowspan="1" colspan="5">
              <p><FONT size="+3">武汉三牛中美中学</FONT></p>
            <p>武汉经济开发区太子湖北路</p>
            <p>www.sannewschool.com</p>
<p>电话: + 86-27-84853636</p></th>
        </tr>
    </tbody></table>
<table width="100%" class="jx_table">
        <tbody><tr class="firstRow">
            <th valign="top">
                姓名</th>
            <th valign="top">学号</th>
            <th valign="top">
                性别</th>
        </tr>
        <tr>
          <td valign="top" colspan="1"><%= "#{@student.cn_name} - #{@student.en_name}" %></td>
          <td rowspan="1" valign="top" colspan="1"><%= @student.number %> </td>
            <td valign="top"><%= @student.gender_string %></td>
        </tr>
        <tr>
          <th valign="top" colspan="1">GRADE</th>
            <th colspan="1" valign="top">
                COUNSELOR&nbsp;
            </th>
      <th valign="top">
                打印时间</th></tr>
        <tr>
          <td valign="top" colspan="1"><%= @student.grade %></td>
            <td colspan="1" valign="top">&nbsp;</td>
            <td valign="top"><%= Date.today %></td>
        </tr>
    </tbody></table>
  <table width="100%" class="jx_table">
       </table>
	<table width="101%" class="jx_table">
  <tbody><tr>
            <th width="31%">课程名</th>
    <th width="41%">评价</th>
        <th width="13%">GPA</th>
            <th width="15%">周课时数</th>
        </tr>
        <% @student_courses.each do |sc| %>
          <tr>
            <td><%= sc.course.name %></td>
          <td><%= sc.level %></td>
          <td><%= sc.gpa %></td>
          <td><%= sc.course.period %></td>
          </tr>
        <% end %>
               <tr>
            <th>总评</th>
            <th rowspan="1" colspan="2">综合GPA</th>
            <th rowspan="1" colspan="3">总课时数</th>
        </tr>
        <tr>
          <td><%= @student.level %></td>
            <td rowspan="1" colspan="2"><%= @student.total_gpa %></td>
            <td rowspan="1" colspan="3"><%= @total_period %></td>
        </tr>
  </tbody></table>
	<table width="101%" class="jx_table">
	  <tbody>
	    <tr>
	      <th width="31%">课程</th>
	      <th>评语</th>
      </tr>
      <% @student_courses.each do |sc| %>
        <% if sc.comment.present? %>
        <tr>
          <td><%= sc.course.name %></td>
          <td align="left" style="text-indent:2em"><p align="left">
            <%= sc.comment %>
            </p>
          </td>
        </tr>
        <% end %>
      <% end %>
      </tbody>
  </table>
	<p>&nbsp;</p>
</div>
</body>
</html>
